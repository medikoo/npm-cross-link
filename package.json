{
  "name": "dev-package",
  "version": "1.0.0",
  "author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
  "bin": {
    "dev-package": "./bin/dev-package.js"
  },
  "dependencies": {
    "child-process-es6-promise": "^1.2",
    "cjs-module": "^1.4",
    "cli-color": "^1.4",
    "cli-progress-footer": "1",
    "cli-sprintf-format": "^1.1",
    "es5-ext": "^0.10.46",
    "event-emitter": "^0.3.5",
    "fs2": "^0.2.15",
    "log4": "^3.1",
    "log4-nodejs": "^3.1.1",
    "memoizee": "^0.4.14",
    "minimist": "^1.2",
    "semver": "^5.6",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-medikoo": "^1.43"
  },
  "eslintConfig": {
    "extends": "medikoo",
    "root": true,
    "env": {
      "node": true
    },
    "rules": {
      "max-lines": [
        "error",
        {
          "max": 100
        }
      ],
      "max-lines-per-function": "off"
    },
    "overrides": [
      {
        "files": [
          "lib/private/install-package/index.js",
          "lib/private/install-package/setup-dependencies.js"
        ],
        "rules": {
          "no-await-in-loop": "off"
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint --ignore-path=.gitignore ."
  },
  "license": "ISC"
}
